@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="d-none d-lg-block">
    <a class="navbar-brand d-flex align-items-center gap-3" href="">
        <img src="logo.png" style="height: 40px; border-radius: 8px;" alt="Sorty" />
        <span>Metzgerei Sorty</span>
    </a>
</div>

<div class="d-lg-none d-flex justify-content-between align-items-center w-100 px-3 py-2 bg-dark">
    <a class="text-white text-decoration-none fw-bold fs-4 d-flex align-items-center gap-2" href="">
        <i class="bi bi-box-seam-fill"></i> Sorty
    </a>

    <button class="btn btn-dark border-secondary" @onclick="ToggleNavMenu">
        <i class="bi bi-list fs-3"></i>
    </button>
</div>

<div class="nav-scrollable @(isMenuOpen ? "mobile-open" : "")" @onclick="CloseNavMenu">
    <nav class="flex-column pt-3">
        <div class="px-4 mb-2 text-uppercase small fw-bold" style="color: #555; letter-spacing: 1px;">
            Hauptmenü
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-grid-fill me-3 fs-5"></i> Dashboard
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="overview">
                <i class="bi bi-table me-3 fs-5"></i> Alle Bestellungen
            </NavLink>
        </div>

        <div class="px-4 mt-4 mb-2 text-uppercase small fw-bold" style="color: #555; letter-spacing: 1px;">
            Arbeit
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="entry">
                <i class="bi bi-plus-square-fill me-3 fs-5"></i> Annahme
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="runner">
                <i class="bi bi-phone-fill me-3 fs-5"></i> Läufer / Abholung
            </NavLink>
        </div>

        <div class="px-4 mt-4 mb-2 text-uppercase small fw-bold" style="color: #555; letter-spacing: 1px;">
            System
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="settings">
                <i class="bi bi-gear-fill me-3 fs-5"></i> Einstellungen
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool isMenuOpen = false;

    private void ToggleNavMenu()
    {
        isMenuOpen = !isMenuOpen;
    }

    private void CloseNavMenu()
    {
        isMenuOpen = false;
    }
}