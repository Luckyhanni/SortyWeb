@page "/entry"
@inject OrderService OrderService
@inject DiscordService DiscordService
@rendermode InteractiveServer

<PageTitle>Eingang - Metzgerei</PageTitle>

<div class="container mt-4 pb-5">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">

            <div class="text-center mb-4">
                <img src="logo.png" alt="Logo" style="height: 80px; filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));" />
                <h2 class="fw-bold mt-2">Bestellannahme</h2>
            </div>

            <div class="card border-0 p-5 animate__animated animate__fadeInUp" style="border-radius: 24px; box-shadow: 0 20px 50px rgba(0,0,0,0.08);">

                <div class="d-flex flex-wrap gap-2 pb-3 mb-4 border-bottom">
                    <div class="badge bg-dark text-white p-2 px-3 rounded-pill d-flex align-items-center" style="height: 35px;">
                        <span class="small text-white-50 me-2 text-uppercase" style="font-size: 0.7rem;">TOTAL</span>
                        <span class="fs-6 fw-bold">@stats.Values.Sum()</span>
                    </div>
                    @foreach (var wh in warehouses)
                    {
                        var count = stats.ContainsKey(wh.Name) ? stats[wh.Name] : 0;
                        <div class="badge p-2 px-3 rounded-pill d-flex align-items-center"
                             style="height: 35px; background-color: @(count > 0 ? wh.ColorHex : "#f5f5f7"); color: @(count > 0 ? "white" : "#86868b"); border: 1px solid @(count > 0 ? wh.ColorHex : "#e5e5ea");">
                            <span class="small me-2" style="opacity: 0.9; font-weight: 600;">@wh.Name</span>
                            <span class="fs-6 fw-bold">@count</span>
                        </div>
                    }
                </div>

                <EditForm Model="@newOrder" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    @if (newOrder.Id != 0)
                    {
                        <div class="alert alert-warning d-flex align-items-center mb-4 border-0" style="border-radius: 12px; color: #856404; background-color: #fff3cd;">
                            <i class="bi bi-pencil-fill me-3"></i>
                            <strong>Bearbeitungsmodus:</strong> Du änderst gerade den Eintrag von @newOrder.Name
                        </div>
                    }

                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted text-uppercase">Nachname</label>
                            <InputText @bind-Value="newOrder.Name" class="form-control form-control-lg fw-bold" placeholder="Müller" style="height: 60px; font-size: 1.4rem;" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted text-uppercase">Vorname</label>
                            <InputText @bind-Value="newOrder.Vorname" class="form-control form-control-lg" style="height: 60px;" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-muted text-uppercase">Lagerort</label>
                            <InputSelect @bind-Value="newOrder.Ort" class="form-select form-select-lg fw-bold" style="height: 60px; color: #333;">
                                @foreach (var wh in warehouses)
                                {
                                    <option value="@wh.Name">@wh.Name</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-muted text-uppercase">Kiste #</label>
                            <InputNumber @bind-Value="newOrder.ChestNumber" class="form-control form-control-lg text-center fw-bold" style="height: 60px; font-size: 1.4rem;" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-muted text-uppercase">Preis (€)</label>
                            <InputNumber @bind-Value="newOrder.Price" class="form-control form-control-lg text-end" style="height: 60px;" />
                        </div>
                    </div>

                    <div class="mt-5 d-flex gap-3">
                        @if (newOrder.Id != 0)
                        {
                            <button type="button" class="btn btn-secondary py-3 px-4 fw-bold rounded-3" @onclick="CancelEdit">
                                ABBRECHEN
                            </button>
                        }

                        <button type="submit" class="btn w-100 py-3 fw-bold fs-4 rounded-3 shadow-lg hover-scale @(newOrder.Id != 0 ? "btn-warning text-dark" : "btn-primary")">
                            @(newOrder.Id != 0 ? "ÄNDERUNG SPEICHERN" : "SPEICHERN")
                        </button>
                    </div>
                </EditForm>
            </div>

            @if (lastAdded != null && newOrder.Id == 0)
            {
                <div class="alert alert-success mt-4 border-0 shadow-sm d-flex align-items-center justify-content-center" style="border-radius: 12px; background-color: white; color: var(--apple-green);">
                    <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                    <span class="fs-5">Gespeichert: <strong>@lastAdded.Name</strong> in <strong>@lastAdded.Ort</strong></span>
                </div>
            }

            <div class="mt-5">
                <h5 class="text-muted fw-bold mb-3 ms-2">Zuletzt eingetragen (zum Bearbeiten tippen)</h5>
                <div class="list-group shadow-sm border-0" style="border-radius: 16px; overflow: hidden;">
                    @foreach (var order in recentOrders)
                    {
                        <div class="list-group-item border-0 p-3 d-flex align-items-center justify-content-between action-item">
                            <div class="d-flex align-items-center gap-3">
                                <div class="badge rounded-pill bg-light text-dark border">@order.Ort</div>
                                <div>
                                    <h5 class="m-0 fw-bold text-dark">@order.Name @order.Vorname</h5>
                                    <small class="text-muted">Kiste #@order.ChestNumber • @order.Price.ToString("C")</small>
                                </div>
                            </div>
                            <button class="btn btn-light rounded-circle text-primary" @onclick="() => EditOrder(order)">
                                <i class="bi bi-pencil-fill"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .action-item {
        transition: background-color 0.2s;
        cursor: pointer;
    }

        .action-item:hover {
            background-color: #f8f9fa;
        }
</style>

@code {
    private Order newOrder = new Order();
    private Order? lastAdded;
    private List<Warehouse> warehouses = new();
    private Dictionary<string, int> stats = new();
    private List<Order> recentOrders = new(); // Liste für "Zuletzt"

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        // Default auf erstes Lager
        if (string.IsNullOrEmpty(newOrder.Ort) && warehouses.Any())
        {
            newOrder.Ort = warehouses.First().Name;
        }
    }

    private async Task LoadData()
    {
        warehouses = await OrderService.GetWarehousesAsync();
        stats = await OrderService.GetFullStatsAsync();
        recentOrders = await OrderService.GetRecentOrdersAsync(5); // Hole die letzten 5
    }

    private void EditOrder(Order order)
    {
        // Wir kopieren das Objekt, damit Änderungen im Formular nicht sofort die Liste unten ändern (erst beim Speichern)
        newOrder = new Order
        {
            Id = order.Id,
            Name = order.Name,
            Vorname = order.Vorname,
            Ort = order.Ort,
            ChestNumber = order.ChestNumber,
            Price = order.Price,
            CreatedAt = order.CreatedAt,
            IsPickedUp = order.IsPickedUp
        };

        lastAdded = null; // Feedback ausblenden beim Bearbeiten
    }

    private void CancelEdit()
    {
        // Reset zum "Neu"-Modus
        var lastOrt = newOrder.Ort; // Ort behalten ist praktisch
        newOrder = new Order { Ort = lastOrt };
    }

    private async Task HandleSubmit()
    {
        if (string.IsNullOrEmpty(newOrder.Ort) && warehouses.Any())
            newOrder.Ort = warehouses.First().Name;

        if (newOrder.Id == 0)
        {
            // NEUER EINTRAG
            await OrderService.AddOrderAsync(newOrder);
            lastAdded = new Order { Name = newOrder.Name, Ort = newOrder.Ort, ChestNumber = newOrder.ChestNumber };
        }
        else
        {
            // UPDATE VORHANDENER EINTRAG
            await OrderService.UpdateOrderAsync(newOrder);
            lastAdded = null; // Kein "Neu"-Feedback bei Update
        }

        // Formular zurücksetzen (Ort behalten)
        var currentOrt = newOrder.Ort;
        newOrder = new Order { Ort = currentOrt };

        await LoadData(); // Liste und Stats neu laden
    }
}