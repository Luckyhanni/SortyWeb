@page "/entry"
@inject OrderService OrderService
@inject DiscordService DiscordService
@rendermode InteractiveServer

<PageTitle>Eingang - Metzgerei</PageTitle>

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-4 text-center mb-4">
            <img src="logo.png" alt="Metzgerei Logo" class="img-fluid mb-3" style="max-height: 250px; filter: drop-shadow(0 0 10px rgba(0,0,0,0.2));" />
            <h2 class="fw-bold text-uppercase" style="letter-spacing: 2px;">Bestellannahme</h2>
            <div class="mt-4 p-3 bg-white rounded shadow-sm">
                <h5 class="text-muted mb-3">Offene Bestellungen</h5>
                <h1 class="display-4 fw-bold text-primary">@stats.Values.Sum()</h1>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card border-0" style="box-shadow: 0 10px 40px rgba(0,0,0,0.08); border-radius: 24px; overflow: hidden;">
                <div class="card-header bg-white p-4 border-bottom">
                    <h3 class="m-0 fw-bold text-dark"><i class="bi bi-basket2-fill text-primary me-2"></i> Neue Kiste erfassen</h3>
                </div>
                <div class="card-body p-5 bg-light">
                    <EditForm Model="@newOrder" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-uppercase text-muted small">Nachname</label>
                                <InputText @bind-Value="newOrder.Name" class="form-control form-control-lg border-0 shadow-sm" placeholder="Müller" style="height: 60px; font-size: 1.5rem;" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-uppercase text-muted small">Vorname</label>
                                <InputText @bind-Value="newOrder.Vorname" class="form-control form-control-lg border-0 shadow-sm" style="height: 60px;" />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold text-uppercase text-muted small">Ort / Lager</label>
                                <InputSelect @bind-Value="newOrder.Ort" class="form-select form-select-lg border-0 shadow-sm" style="height: 60px;">
                                    <option value="Lager 1">Lager 1</option>
                                    <option value="Lager 2">Lager 2</option>
                                    <option value="Lager 3">Lager 3</option>
                                    <option value="Lager 4">Lager 4</option>
                                </InputSelect>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold text-uppercase text-muted small">Kiste #</label>
                                <InputNumber @bind-Value="newOrder.ChestNumber" class="form-control form-control-lg border-0 shadow-sm text-center fw-bold" style="height: 60px; font-size: 1.5rem;" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold text-uppercase text-muted small">Preis (€)</label>
                                <InputNumber @bind-Value="newOrder.Price" class="form-control form-control-lg border-0 shadow-sm text-end" style="height: 60px;" />
                            </div>
                        </div>

                        <div class="mt-5">
                            <button type="submit" class="btn btn-dark w-100 py-3 fw-bold text-uppercase shadow-lg hover-scale" style="border-radius: 10px; font-size: 1.5rem; transition: transform 0.2s;">
                                Speichern & Etikett
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            @if (lastAdded != null)
            {
                <div class="alert alert-success mt-3 shadow-sm d-flex align-items-center animate__animated animate__fadeIn">
                    <i class="bi bi-check-circle-fill fs-3 me-3"></i>
                    <div>
                        <strong>Gespeichert:</strong> @lastAdded.Name im @lastAdded.Ort (Kiste @lastAdded.ChestNumber)
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-scale:hover {
        transform: scale(1.02);
    }
</style>

@code {
    private Order newOrder = new Order { Ort = "Lager 1" };
    private Order? lastAdded;
    private Dictionary<string, int> stats = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadStats();
    }

    private async Task HandleSubmit()
    {
        await OrderService.AddOrderAsync(newOrder);
        lastAdded = new Order
        {
            Name = newOrder.Name,
            Ort = newOrder.Ort,
            ChestNumber = newOrder.ChestNumber
        };

        // Reset (Ort behalten für Workflow)
        var currentOrt = newOrder.Ort;
        newOrder = new Order { Ort = currentOrt };

        await LoadStats();
    }

    private async Task LoadStats() => stats = await OrderService.GetStatsAsync();
}